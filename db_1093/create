create table rules (
    id serial primary key,
    name varchar(255)
);
create table role (
    id serial primary key,
    name varchar(255),
	rules_id int references rules(id)
);
create table users (
    id serial primary key,
    name varchar(255),
	role_id int references role(id)
);
create table comments (
    id serial primary key,
    comment text
);
create table attachs (
    id serial primary key,
    name varchar(255)
);
create table category (
    id serial primary key,
    name varchar(255)
);
create table state (
    id serial primary key,
    name varchar(255)
);

create table item (
    id serial primary key,
	comments_id int references comments(id) unique,
	attachs_id int references attachs(id),
	category_id int references category(id),
	state_id int references state(id)
);
create table shop (
    id serial primary key,
	user_id int references users(id) unique,
	item_id int references item(id) unique
);
